# =================================
# SQL Mission Database Configuration
# =================================

# Database Type: 'sqlite' atau 'postgresql'
DATABASE_TYPE=postgresql

# =================================
# PostgreSQL Configuration
# =================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=sql_mission
DATABASE_USER=postgres
DATABASE_PASSWORD=your_password_here

# Connection string (alternatif - jika diisi, akan override setting di atas)
# DATABASE_URL=postgresql://postgres:password@localhost:5432/sql_mission

# =================================
# SQLite Configuration (jika DATABASE_TYPE=sqlite)
# =================================
# DATABASE_PATH=./sql_mission.db

# =================================
# Server Configuration
# =================================
PORT=3001
CORS_ORIGIN=http://localhost:5173
NODE_ENV=development
